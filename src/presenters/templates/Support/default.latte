{block content}

<h1 n:block=title><i class="fa fa-phone"></i> {_pages.support.header.support}</h1>

<div class="well">
    {_pages.support.intro.in_case}
</div>

<table class="table table-striped" style="width:49%; float: left;margin-right:2%;">
    <tr n:if="$contact->name">
        <th>{_pages.support.contact_person}:</th>
        <td><i class="fa fa-user"></i> {$contact->name}</td>
    </tr>
    <tr n:if="$contact->tel">
        <th>{_pages.support.telephone}:</th>
        <td><i class="fa fa-phone"></i> {$contact->tel}</td>
    </tr>
    <tr n:if="$contact->email">
        <th>{_pages.support.email}:</th>
        <td><a href="mailto:{$contact->email}?subject=Podpora%20syst%C3%A9mu"><span class="fa fa-envelope"></span> {$contact->email}</a></td>
    </tr>
</table>